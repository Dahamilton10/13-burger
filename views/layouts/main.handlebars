<body>
    <h1 class="text-center strong">Eat-Da-Burger!</h1>

    {{{ body }}}

    <div class="text-center">
        <h2 class="text-center">Add a Burger!</h2>
        <form method="POST" id="addBurger" class="button-size text-center">
            <input type="textfield" name="burgerName" placeholder="Burger Name..."></input>
            <button id="save-button">Save Burger!</button>
        </form>
    </div>

    <script type="javascript/text">

$("#save-button").click(function(event) {
    event.preventDefault();
    console.log("on click event");
    let newBurger = {
        burgerName: $("#burgerName").val().trim(),
        eaten_status: false
    };

    $.post("/", newBurger)
        .then(function(data){
            console.log(data);
        });
});

$(document).ready(function() {
  $(".updateBurger").on("submit", function(event) {
    // Make sure to preventDefault on a submit event.
    event.preventDefault();



    let updatedburger = {
      burgerID: this.data("id");
    };

    // Send the POST request.
    $.ajax("/update", {
      type: "POST",
      data: updatedburger
    }).then(
      function() {
        console.log("updated id");
        // Reload the page to get the updated list

      }
    );
  });
});

</script>

</body>

</html>