<div class="row">
    {{#if burgers}}
    <div class="col-md-6">
        <ul>
            {{#each burgers}}
            {{#unless this.eaten_status}}
            <li>
                <p>{{this.id}}: {{this.burger_name}}</p>
                <form class="button-size updateBurger">
                <button class="eat" id="{{this.id}}" data-id="{{this.id}}">Eat it!</button>
                </form>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>


